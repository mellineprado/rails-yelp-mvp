<h1 class="mb-4 text-center">Restaurant Info</h1>
<h2><%=@restaurant.name%></h2>
<p class="mb-3"><strong>Address:</strong> <%=@restaurant.address %></p>
<p><strong>Phone:</strong> <%=@restaurant.phone_number %></p>
<p><strong>Category:</strong> <%=@restaurant.category %></p>

<%=link_to "Back", restaurants_path, class:"btn btn-outline-warning" %>

<h3 class="mt-3">Reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> <%= "⭐" * review.rating %> </li>
  <% end %>
</ul>

<%= link_to "Add a new review", new_restaurant_review_path(@restaurant),class:"btn btn-success mt-3" %>
